{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "VEL Manifest",
  "type": "object",
  "required": ["provenance", "environment", "results_contract"],
  "properties": {
    "vel_schema_version": { "type": "string" },
    "manifest_uuid": { "type": "string" },
    "license_id": { "type": "string" },
    "provenance": {
      "type": "object",
      "required": ["git_sha", "artifact_sha256"],
      "properties": {
        "git_sha": { "type": "string", "pattern": "^[0-9a-fA-F]{40}$" },
        "artifact_sha256": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" },
        "cosign_signature": { "type": "string" }
      }
    },
    "environment": {
      "type": "object",
      "required": ["python_version", "system_locale", "decimal_context"],
      "properties": {
        "python_version": { "type": "string" },
        "system_locale": { "type": "string" },
        "timezone": { "type": "string" },
        "decimal_context": { "type": "string" }
      }
    },
    "results_contract": {
      "type": "object",
      "required": ["canonical_ratio", "rounding_precision"],
      "properties": {
        "metrics_version": { "type": "string" },
        "canonical_ratio": { "type": "string" },
        "rounding_precision": { "type": "integer" }
      }
    }
  }
}
